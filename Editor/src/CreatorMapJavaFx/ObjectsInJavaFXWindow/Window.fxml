<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="572.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CreatorMapJavaFx.ObjectsInJavaFXWindow.WindowController">
   <children>
      <TabPane prefHeight="400.0" prefWidth="572.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab onSelectionChanged="#setModeNull" text="Edit existing\make new\save">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <JFXTextField fx:id="textEditMapPath" labelFloat="true" layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="376.0" promptText="Path:" unFocusColor="#00ff40" />
