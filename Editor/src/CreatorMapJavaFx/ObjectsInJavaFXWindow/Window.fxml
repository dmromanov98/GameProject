                        <JFXTextField fx:id="textBackgroundLayout" labelFloat="true" layoutX="286.0" layoutY="73.0" prefHeight="25.0" prefWidth="122.0" promptText="Layout:" unFocusColor="#00ff40" />
                        <JFXButton buttonType="RAISED" layoutX="431.0" layoutY="73.0" onAction="#btnBackgroundAdd" style="-fx-background-color: ffffff;" text="Add to background" />
                     </children></AnchorPane>
                </content>
            </Tab>
            <Tab onSelectionChanged="#setModeTwo" text="Dekails">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="listDekailsPaths" layoutX="14.0" layoutY="13.0" onMouseClicked="#listDekailsClick" prefHeight="345.0" prefWidth="262.0" AnchorPane.bottomAnchor="13.0" AnchorPane.topAnchor="13.0" />
