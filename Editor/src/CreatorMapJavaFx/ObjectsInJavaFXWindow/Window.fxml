                        <JFXButton buttonType="RAISED" layoutX="14.0" layoutY="56.0" onAction="#btnEditMapNewMap" style="-fx-background-color: ffffff;" text="Make new map" />
                        <JFXButton buttonType="RAISED" layoutX="14.0" layoutY="97.0" onAction="#btnEditSaveMap" prefHeight="77.0" prefWidth="120.0" style="-fx-background-color: ffffff;" text="Save" />
                     </children></AnchorPane>
                </content>
            </Tab>
            <Tab onSelectionChanged="#setModeOne" text="Background">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="listBackgroundPaths" layoutX="14.0" layoutY="14.0" prefHeight="345.0" prefWidth="262.0" AnchorPane.bottomAnchor="13.0" AnchorPane.topAnchor="13.0" />
